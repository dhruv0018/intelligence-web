{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "League Schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "name": {
            "type": "string"
        },
        "sportId": {
            "type": "integer"
        },
        "gender": {
            "type": "string",
            "options": [
                "male",
                "female"
            ]
        },
        "seasonStartMonth": {
            "type": "integer"
        },
        "seasonStartDay": {
            "type": "integer"
        },
        "seasonEndMonth": {
            "type": "integer"
        },
        "seasonEndDay": {
            "type": "integer"
        },
        "seasons": {
            "type": "array",
            "items": { "$ref": "season" }
        },
        "tagSetId": {
            "type": "integer"
        },
        "numberOfPeriods": {
            "type": "integer"
        },
        "periodLabel": {
            "type": "string"
        },
        "periodAbbreviationLabel": {
            "type": "string"
        },
        "positionSetId": {
            "type": "integer"
        },
        "flagRuleSetId": {
            "type": "integer"
        },
        "filterSetId": {
            "type": "integer"
        }
    },
    "additionalProperties": false
}
