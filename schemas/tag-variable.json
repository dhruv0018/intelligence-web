{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Tag Schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "name": {
            "type": "string"
        },
        "type": {
            "type": "string"
        },
        "isRequired": {
            "type": "boolean"
        },
        "options": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "formations": {
            "type": "array",
            "items": {
                "$ref": "formation"
            }
        }
    },
    "additionalProperties": false
}
