{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Play Schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "startTime": {
            "type": "integer"
        },
        "endTime": {
            "type": "integer"
        },
        "events": {
            "type": "array",
            "items": { "$ref": "event" }
        },
        "gameId": {
            "type": "integer"
        },
        "flags": {
            "type": "array"
        },
        "clip": {
            "type": ["null", { "$ref": "video" }]
        },
        "shares": {
            "type": "array",
            "items": { "$ref": "share" }
        },
    },
    "additionalProperties": false
}
